model User {
  id         Int      @id @default(autoincrement())
  name       String?
  email      String?  @unique
  phone      String?  @unique
  isVerified Boolean  @default(false)
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @updatedAt @map("updated_at")

  otpCode OtpCode?

  @@map("Users")
}
